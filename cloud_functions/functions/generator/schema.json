{
  "subscription": "users",
  "targets": [
    {
      "triggerEvent": ["onUpdate", "onCreate"],
      "collectionPath": "founders",
      "map": [
        { "fromField": "firstName", "toField": "firstName" },
        { "fromField": "lastName", "toField": "lastName" },
        { "fromField": "preferredName", "toField": "preferredName" }
      ]
    }
  ]
}
